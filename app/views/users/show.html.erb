<div class="container">
  <div class="page-header">
    <h1>User</h1>
    <h2><%= @user.login %></h2>
    <dl>
      <dt>URL</dt>
      <dd><%= link_to @user.login, @user.url %></dd>
      <dt>Packages (<%= @packages.count %>)</dt>
      <dd>
        <ul>
          <% @packages.each do |package| %>
            <li><%= link_to package.name, package %></li>
          <% end %>
        </ul>
      </dd>
    </dl>
  </div>
</div>

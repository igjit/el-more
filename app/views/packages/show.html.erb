<div class="container">
  <div class="page-header">
    <h1><%= @package.name %></h1>
    <p class="lead"><%= @package.description %></p>
  </div>

  <dl>
    <dt>URL</dt>
    <dd>
      <% if @package.url %>
        <%= link_to @package.url, @package.url %>
      <% else %>
        (<%= @package.repo_type %>)
      <% end %>
    </dd>
  </dl>

  <div class="row">
    <div class="col-md-8">
      <h3>Users who installed this package also installed</h3>
      <div class="list-group">
        <% @similar_packages.each do |x| %>
          <% package = x[0] %>
          <%= link_to(package, class: 'list-group-item') do %>
            <h4 class="list-group-item-heading">
              <%= package.name %>
            </h4>
            <p class="list-group-item-text">
              <%= package.description %>
            </p>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="col-md-4">
      <h3>Users (<%= @users.count %>)</h3>
      <ul>
        <% @users.each do |user| %>
          <li><%= link_to user.login, user_path(user.id) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="container">
  <div class="page-header">
    <h1>Package</h1>
    <h2><%= @package.name %></h2>
    <dl>
      <dt>URL</dt>
      <dd><%= link_to @package.url, @package.url %></dd>
      <dt>Description</dt>
      <dd><%= @package.description %></dd>
      <dt>Similar packages</dt>
      <dd>
        <ul>
          <% @similar_packages.each do |x| %>
            <% package = x[0] %>
            <li><%= "%0.2f" % x[1] %> <%= link_to package.name, package %></li>
          <% end %>
        </ul>
      </dd>
      <dt><%= @users.count %> users installed this</dt>
      <dd>
        <ul>
          <% @users.each do |user| %>
            <li><%= link_to user.login, user_path(user.id) %></li>
          <% end %>
        </ul>
      </dd>
    </dl>
  </div>
</div>
